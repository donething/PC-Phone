<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialog_background"
    android:padding="16dp">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_activity_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- 内容 -->
    <TextView
        android:id="@+id/tv_activity_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_activity_dialog_title"
        android:layout_marginBottom="32dp"
        android:textIsSelectable="true"
        android:textSize="16sp" />

    <!-- 操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_activity_dialog_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bn_activity_dialog_cancel"
            style="?android:attr/buttonBarNegativeButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="@string/bn_cancel"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bn_activity_dialog_ok"
            style="?android:attr/buttonBarPositiveButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="@string/bn_ok"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>